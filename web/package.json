{
  "name": "@ananda-library-chatbot/web",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Michael Olivier",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "install-deps": "cd .. && npm install",
    "build": "next build",
    "build-with-tests": "NODE_ENV=development jest && next build",
    "build-with-api-tests": "cd .. && NODE_ENV=development jest --config=jest.config.cjs --coverageThresholdWarningOnly=true && cd web && next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"**/*.+(ts|js|tsx)\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:changed": "jest --bail --findRelatedTests",
    "test:server": "jest --selectProjects=server",
    "test:all": "npm test && echo '✅ Client tests passed! Running server tests...' || (echo '❌ Client tests failed!' && exit 1) && npm run test:server",
    "test:server:coverage": "jest --selectProjects=server --coverage",
    "test:queries:ananda-public": "RUN_SEMANTIC_TESTS=true dotenv -e .env.ananda-public -- jest -c jest.config.cjs __tests__/site_specific/ananda-public/*.test.ts",
    "find-untested": "node ../scripts/find-untested-files.js",
    "emulator": "firebase emulators:start --import ../emulator-data --export-on-exit ../emulator-data --inspect-functions",
    "prepare": "cd .. && husky",
    "setup-hooks": "cd .. && husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@tailwindcss/typography": "0.5.14",
    "@tanstack/react-query": "^5.69.0",
    "ai": "^4.1.58",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "framer-motion": "^11.18.2",
    "next": "14.2.24",
    "nextjs-google-analytics": "^2.3.3",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^9.1.0",
    "react-toastify": "^10.0.6",
    "styled-jsx": "5.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookies": "^0.9.0",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/node-fetch": "^2.6.12",
    "@types/nodemailer": "^6.4.17",
    "@types/progress": "^2.0.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/showdown": "^2.0.6",
    "@types/text-encoding": "^0.0.40",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.24",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "3.2.7",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "keywords": [
    "starter",
    "gpt4",
    "pinecone",
    "typescript",
    "nextjs",
    "langchain",
    "pdf",
    "openai"
  ]
}
