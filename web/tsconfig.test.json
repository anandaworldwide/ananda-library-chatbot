{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "moduleResolution": "bundler",
    "target": "es2022"
  },
  "include": [
    "__tests__/**/*",
    "src/types/**/*.d.ts",
    "src/components/**/*",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
