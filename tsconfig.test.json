{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "types": ["jest", "node"],
    "moduleResolution": "node"
  },
  "include": ["__tests__/**/*", "types/**/*.d.ts", "components/**/*"],
  "exclude": ["node_modules"]
}
