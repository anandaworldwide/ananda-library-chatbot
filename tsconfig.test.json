{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "types": ["jest", "node"]
  },
  "include": ["__tests__/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
