{
  "crons": [
    {
      "path": "/api/relatedQuestions?updateBatch=50",
      "schedule": "0 * * * *"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run build-with-api-tests"
      }
    }
  ],
  "functions": {
    "pages/api/relatedQuestions.ts": {
      "maxDuration": 300
    }
  }
}
